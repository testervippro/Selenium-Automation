pipeline {
    agent any

    environment {
        IMAGE_NAME = 'cuxuanthoai/chrome-firefox-edge'
        IMAGE_TAG = 'latest'
        CONTAINER_NAME = 'chrome-firefox-edge-container'
        REPORT_DIR = 'target/allure-results'
    }

    stages {
        stage('Prepare') {
            steps {
                script {
                    // Prepare directories and set permissions
                    sh "mkdir -p ${WORKSPACE}/${REPORT_DIR}"
                    sh "chmod -R 777 ${WORKSPACE}"  // Full access to Jenkins
                    sh "chown -R jenkins:jenkins ${WORKSPACE}"  // Ensure Jenkins user owns the workspace
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build Docker image
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run tests in Docker with mounted workspace and Maven cache
                    sh """
                        docker run --rm --name ${CONTAINER_NAME} \
                            --shm-size 2gb \
                            -v ${WORKSPACE}:${WORKSPACE} \
                            ${IMAGE_NAME}:${IMAGE_TAG}
                    """
                    // Set correct permissions on report directory
                    sh "chmod -R 777 ${WORKSPACE}/${REPORT_DIR}"
                }
            }
        }
    }

    post {
        always {
            // Publish Allure reports
            publishHTML target: [
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                includes: '**/*',
                reportDir: "${WORKSPACE}/${REPORT_DIR}",
                reportFiles: 'index.html',
                reportName: 'Test Results'
            ]
        }

        success {
            echo 'Tests completed successfully!'
        }

        failure {
            echo 'Tests failed!'
        }
    }
}
