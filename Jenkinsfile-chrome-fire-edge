pipeline {
    agent any

    environment {
        REPORT_DIR = 'target/allure-results'
    }

    stages {
        stage('Run Tests') {
            steps {
                script {
                    // Execute tests with the specified parameters using the Maven wrapper
                    sh "./mvnw test -Pweb-execution -Dsuite=local-suite -Dtarget=local-suite -Dheadless=true -Dbrowser=chrome"
                }
            }
        }
    }

    post {
        always {
            // Publish Allure reports
            publishHTML target: [
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                includes: '**/*',
                reportDir: "${WORKSPACE}/${REPORT_DIR}",
                reportFiles: 'index.html',
                reportName: 'Test Results'
            ]
        }

        success {
            echo 'Tests completed successfully!'
        }

        failure {
            echo 'Tests failed!'
        }
    }
}
