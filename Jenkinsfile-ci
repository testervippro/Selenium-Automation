pipeline {
    agent any

    environment {
        mvnHome = ''
    }

    stages {
        stage('Preparation') {
            steps {
                script {
                    // Set mvnHome in the Preparation stage
                    mvnHome = tool 'maven' // 'maven' is the name you assigned to your Maven installation in Jenkins' Global Tool Configuration
                    echo "Maven Home: ${mvnHome}"
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Use the mvnHome variable to run Maven build
                    sh "'${mvnHome}/bin/mvn' clean package -DskipTests=true"
                }
            }
        }

        stage('Test Execution') {
            steps {
                script {
                    // Use the mvnHome variable to run Maven test
                    sh "'${mvnHome}/bin/mvn' test -Pweb-execution -Dsuite=local-suite -Dtarget=local-suite -Dheadless=true -Dbrowser=chrome"
                }
            }
        }
    }

    post {
        always {
            // Generate Allure report
            allure([
                results: [[path: 'target/allure-results']],
                reportBuildPolicy: 'ALWAYS',
                includeProperties: false
            ])

             // Send an email notification
            mail(
                to: 'cuxuanthoai@gmail.com',
                subject: "[Jenkins Build] ${env.JOB_NAME} - ${currentBuild.currentResult} - (#${env.BUILD_NUMBER})",
                body: """
                    Hello,

                    The Jenkins build for **${env.JOB_NAME}** (#${env.BUILD_NUMBER}) has completed.

                    **Status:** ${currentBuild.currentResult}  
                    **Build Duration:** ${currentBuild.durationString}  
                    **Jenkins Server:** [Visit Jenkins](https://ed1f-116-96-46-98.ngrok-free.app)  
                    **Allure Report:** [View Allure Report](https://ed1f-116-96-46-98.ngrok-free.app/job/${env.JOB_NAME}/${env.BUILD_NUMBER}/allure)  
                    **Build URL:** [Open Build Details](${env.BUILD_URL})  

                    Best regards,  
                    **testervippro**
                """,
                mimeType: 'text/html'
            )
        }

        success {
            echo 'Tests completed successfully!'
        }

        failure {
            echo 'Tests failed!'
        }
    }
}
