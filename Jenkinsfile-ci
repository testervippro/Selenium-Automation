pipeline {
    agent any

    stages {
        stage('Preparation') {
            steps {
                script {
                    // Get Maven from the Jenkins tool configuration
                    def mvnHome = tool 'maven'  // 'maven' is the name you assigned to your Maven installation in Jenkins' Global Tool Configuration

                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Run Maven build using the tool path
                    sh "'${mvnHome}/bin/mvn' clean package -DskipTests=true"
                }
            }
        }

        stage('Test Execution') {
            steps {
                script {
                    // Run tests using the specified Maven tool
                    sh "'${mvnHome}/bin/mvn' test -Pweb-execution -Dsuite=local-suite -Dtarget=local-suite -Dheadless=true -Dbrowser=chrome"
                }
            }
        }
    }

    post {
        always {
            // Publish Allure reports to Jenkins (adjust the report path and name as needed)
            publishHTML target: [
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                includes: '**/*',
                reportDir: "${WORKSPACE}/target/allure-results",
                reportFiles: 'index.html',
                reportName: 'Test Results'
            ]
        }

        success {
            echo 'Tests completed successfully!'
        }

        failure {
            echo 'Tests failed!'
        }
    }
}
