pipeline {
    agent any

    environment {
        REPORT_DIR = 'target/allure-results'
        MAVEN_OPTS = '-Dmaven.repo.local=./m2/repository'  // Cache Maven dependencies locally
    }

    stages {
        stage('Cache Maven dependencies') {
            steps {
                script {
                    // Ensure .m2/repository exists in the workspace to cache dependencies
                    sh "mkdir -p ./m2/repository"
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Execute tests with the specified parameters using Maven wrapper
                    // Run tests in headless mode on Chrome and cache dependencies locally
                    sh "./mvnw test -Pweb-execution -Dsuite=local-suite -Dtarget=local-suite -Dheadless=true -Dbrowser=chrome -Dmaven.repo.local=./m2/repository"
                    // Uncomment below if you wish to run tests without dependency caching (for testing)
                    // sh "./mvnw test -Pweb-execution -Dsuite=local-suite -Dtarget=local-suite -Dheadless=true -Dbrowser=chrome"
                }
            }
        }
    }

    post {
        always {
            // Publish Allure reports to Jenkins
            publishHTML target: [
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                includes: '**/*',
                reportDir: "${WORKSPACE}/${REPORT_DIR}",
                reportFiles: 'index.html',
                reportName: 'Test Results'
            ]
        }

        success {
            echo 'Tests completed successfully!'
        }

        failure {
            echo 'Tests failed!'
        }
    }
}
