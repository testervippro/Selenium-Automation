pipeline {
    agent any

    stages {

        stage('Test') {
            steps {
                dir('selenium-java-automation') {
                    // Run Maven tests with specific options
                    bat 'mvn test -Pweb-execution -Dsuite=local -Dtarget=local -Dheadless=false -Dbrowser=edge'
                }
            }
        }

    }
}
