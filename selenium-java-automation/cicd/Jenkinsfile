pipeline {
    agent any

    stages {
        stage('Clean') {
            steps {
                dir('selenium-java-automation') {
                    // Uncomment the line below to clean the Maven project
                    // bat 'mvn clean'
                }
            }
        }

        stage('Test') {
            steps {
                dir('selenium-java-automation') {
                    bat 'mvn test'
                }
            }
        }

        stage('Test Execution') {
            steps {
                try {
                    bat 'mvn test -Pweb-execution -Dsuite=local -Dtarget=local -Dheadless=true -Dbrowser=chrome'
                } catch (Exception e) {
                    currentBuild.result = 'FAILURE'
                } finally {
                    junit '**/target/surefire-reports/TEST-*.xml'

                    publishHTML (target: [
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'target/surefire-reports',
                        reportFiles: 'index.html',
                        reportName: "TestNG Report"
                    ])
                }
            }
        }
    }
}
